<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kawu.studio.dao.BookDao">
	<insert id="insertBook">
	insert into book (name, number)
    values (
    #{name},
     #{number})
	</insert>
	<delete id="deleteBook">
	delete from book
    where book_id = #{bookId}
	</delete>
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<select id="queryById" resultType="com.kawu.studio.entity.Book" parameterType="long">
		<!-- 具体的sql -->
		SELECT
			book_id,
			name,
			number
		FROM
			book
		WHERE
			book_id = #{bookId}
	</select>
	
	<select id="queryAll" resultType="com.kawu.studio.entity.Book">
		SELECT
			book_id,
			name,
			number
		FROM
			book
		ORDER BY
			book_id
		LIMIT #{offset}, #{limit}
	</select>
	
	<update id="reduceNumber">
		UPDATE book
		SET number = number - 1
		WHERE
			book_id = #{bookId}
		AND number > 0
	</update>
	<update id="updateBook">
		update book
		<set >
			<if test="number != null" >
				number = #{number},
			</if>
			<if test="name != null" >
				name = #{name},
			</if>
		</set>
		where book_id = #{bookId,jdbcType=BIGINT}
	</update>
</mapper>